{
  "name": "ballerina-auth-asgardeo",
  "version": "1.0.0",
  "description": "Fullstack application with Ballerina authentication and Asgardeo integration",
  "scripts": {
    "start": "concurrently \"npm run start:auth\" \"npm run start:client\"",
    "start:auth": "cd auth-service && bal run",
    "start:client": "cd client && npm run dev",
    "install:client": "cd client && npm install",
    "build:client": "cd client && npm run build",
    "lint:client": "cd client && npm run lint"
  },
  "keywords": [
    "ballerina",
    "asgardeo",
    "oauth2",
    "authentication",
    "nextjs",
    "fullstack"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
